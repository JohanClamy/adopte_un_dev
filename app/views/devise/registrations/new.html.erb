<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="well">
        <h2>Inscrivez-vous</h2>
        
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
        
          <div class="field form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true,class: 'form-control' %>
          </div>
        
          <div class="field form-group">
            <%= f.label :mot_de_passe %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> caract√®res minimum)</em>
            <% end %><br />
            <%= f.password_field :mot_de_passe, autocomplete: "off", class: 'form-control' %>
          </div>
        
          <div class="field form-group">
            <%= f.label :confirmation_mot_de_passe %><br />
            <%= f.password_field :confirmation_mot_de_passe, autocomplete: "off", class: 'form-control' %>
          </div>
        
          <div class="actions form-group">
            <%= f.submit "S'inscrire", class: 'btn btn-default' %>
          </div>
        <% end %>
        
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>