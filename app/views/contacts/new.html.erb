<div class="container">
  <h3 class="text-center">Contactez-nous</h3>
  
  <%= form_for "/contacts" do |f| %>
    <%= f.label :nom %>
    <%= f.text_field :nom %>
    
    <%= f.label :email %>
    <%= f.text_field :email %>
    
    <%= f.label :message %>
    <%= f.text_area :message %>
    
    <%= f.submit 'Envoyer' %>
  
  <% end %>


</div>